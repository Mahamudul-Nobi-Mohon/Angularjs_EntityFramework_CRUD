@model AngularCRUD_EntityFramework.Models.Department

@{
    ViewBag.Title = "Delete";
}

<h2>Are you sure you want to Delete ? </h2>

<div ng-controller="empController2" style="margin-top:50px;">
    <div ng-init="GetSingleDepartment()">
        <form class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-md-2" for="Name">Name</label>
                <div class="col-md-10">
                    <label class="form-control text-box single-line" ng-model="department.Name" id="Name" name="Name"  >{{department.Name}}</label>
                    <span class="field-validation-valid text-danger" data-valmsg-for="Name" data-valmsg-replace="true"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="Code">Code</label>
                <div class="col-md-10">
                    <label class="form-control text-box single-line" ng-model="department.Code" id="Code" name="Code">{{department.Code}}</label>
                    <span class="field-validation-valid text-danger" data-valmsg-for="Code" data-valmsg-replace="true"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Cancel" ng-click="Cancel()" class="btn btn-default" />
                    <input type="submit" value="Delete" ng-click="DeleteDepartment(department.DepartmentId)" class="btn btn-default" />
                </div>
            </div>
        </form>
    </div>
</div>